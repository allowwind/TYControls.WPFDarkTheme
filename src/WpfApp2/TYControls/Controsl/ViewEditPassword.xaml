<Window
    x:Class="TYControls.ViewEditPassword"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="请输入密码"
    Width="300"
    Height="150"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <PasswordBox
            x:Name="txtValue"
            Margin="5"
            VerticalContentAlignment="Center" KeyDown="txtValue_KeyDown"
            FontSize="20" />
        <Button
            Grid.Row="1"
            Margin="5"
            Click="BtnClickOK">
            确定
        </Button>
    </Grid>
</Window>